# ========================================
# Service Ports (Host Machine - Configure these to change ports)
# ========================================
ATOMSPACE_API_PORT=8001
ANNOTATION_SERVICE_PORT=5800
ANNOTATION_TOOL_PORT=3000
INTEGRATION_API_PORT=9000
NEURAL_MINER_PORT=9002
MORK_PORT=8231
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
HUGEGRAPH_PORT_EXTERNAL=8080
MONGO_PORT=27017

# ========================================
# Service URLs (For Annotation Tool Frontend)
# ========================================
# These are used by the browser to reach services. usage: http://localhost:<HOST_PORT>
LOADER_URL=http://localhost:8001       # Points to Atomspace API
ANNOTATION_URL=http://localhost:5800   # Points to Annotation Service
INTEGRATION_URL=http://localhost:9000  # Points to Integration Service

# ========================================
# Integration Service Configuration
# ========================================
# Internal Docker Network URLs (usually don't need to change these)
ATOMSPACE_API_URL=http://atomspace-api:8001
NEURAL_MINER_URL=http://neural-miner:9002
ANNOTATION_SERVICE_URL=http://annotation_service:5800


# Timeouts
ATOMSPACE_TIMEOUT=600
MINER_TIMEOUT=1800
ANNOTATION_TIMEOUT=300
CSV_CACHE_DIR=./cache
SHARED_VOLUME_PATH=/shared/output

# ========================================
# LLM Configuration (For Annotation Service)
# ========================================
LLM_PROVIDER=gemini # 'openai' or 'gemini'
LLM_MODEL=gemini
GEMINI_API_KEY=
LLM_API_KEY=

# ========================================
# Neo4j Database
# ========================================
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=1G

# ========================================
# HugeGraph Configuration
# ========================================
